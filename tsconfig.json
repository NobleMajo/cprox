{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "ES2020",
      "ES5",
      "ES6"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
